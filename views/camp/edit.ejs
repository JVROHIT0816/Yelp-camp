<%- layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">EDIT CAMPGROUND</h1>
    <div class="col-6 offset-3">
        <form action="/camps/<%= campgrounds._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="camp[title]" value="<%= campgrounds.title%>" required>
                <div class="valid-feedback">
                    Looks Good!!                    
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="camp[location]"value="<%= campgrounds.location%>" required>
                <div class="valid-feedback">
                    Looks Good!!                    
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Add more images: </label>
                <input type="file" name="image" id="" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">$</span>
                    </div>
                    <input type="text" class="form-control" placeholder="00.00" aria-label="Username" aria-describedby="basic-addon1" name="camp[price]" value="<%= campgrounds.price%>" required>
                    <div class="valid-feedback">
                        Looks Good!!                    
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="camp[description]" placeholder="" required><%= campgrounds.description%></textarea>
                <div class="valid-feedback">
                    Looks Good!!                    
                </div>
            </div>
            <div class="mb-3">
                <% campgrounds.image.forEach(function(img,i){%>
                    <img class="img-thumbnail" src="<%=img.thumbnail%>" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteimage[]" value="<%=img.filename%>">  
                    </div>
                    <label class="form-label" for="image-<%=i%>">Delete?</label>
                <%}) %>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">UPDATE</button>
            </div>    
        </form>
        <a href="/camps" class="btn btn-info">Back To All Camps</a>
    </div>
</div>

