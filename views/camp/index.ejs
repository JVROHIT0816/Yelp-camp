<%- layout('layouts/boilerplate') %> 
<script>
    const maptoken = '<%-process.env.mapboxtoken%>'
    const camp = {features: <%-JSON.stringify(campgrounds)%>}
</script>  
<div id="clustermap" class="mb-3"></div>
<h1>Our Camps</h1>
<% for(let camp of campgrounds) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if(camp.image.length) {%> 
                <img class="img-fluid" src="<%=camp.image[0].url%>"alt="" srcset="">
                <% } else { %>
                 <img class="img-fluid" src="https://res.cloudinary.com/dris3a379/image/upload/v1611757456/YelpCamp/hzsxdvtj2pl0aiczho53.jpg" alt="" >
                <% } %> 
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%=camp.title%></h5>
                    <p class="card-text text-muted"><strong>By <%=camp.author.username %></strong></p>
                    <p class="text"><%=camp.description%></p>
                    <p class="text-muted"><%=camp.location%></p>
                    <a class="btn btn-info" href="/camps/<%=camp._id%>">View <%=camp.title%></a>
                </div>
            </div>
        </div>
    </div>
<% }%>
<script src="/js/clustermap.js"></script>
